{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src","module.d.ts"],
  "exclude": ["node_modules"]
}
